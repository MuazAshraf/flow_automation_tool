{
  "manifest_version": 3,
  "name": "VeoFlow - Bulk Video Automation",
  "description": "Automate bulk video generation on Google Flow with VEO AI. Supports batch prompts, multiple models, and auto-download.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "VeoFlow - Automation for VEO AI"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "alarms",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "host_permissions": [
    "https://labs.google/*",
    "https://aitestkitchen.withgoogle.com/*",
    "*://labs.google/*"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
